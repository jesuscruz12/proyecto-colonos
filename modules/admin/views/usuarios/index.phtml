<div class="modal fade nuevo" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0">Nuevo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" id="frm_nuevo" class="custom-validation">
                <div class="modal-body">
                    <div class="row">


                        <div class="col-md-12">
                            <div class="form-group">
                                <input name="x1" id="x1" class="form-control" type="text" placeholder="Nombre" required="">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <input name="x2" id="x2" class="form-control" type="email" placeholder="Correo electrónico" required="">
